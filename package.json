{
  "name": "purescript-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "shx mkdir -p dist && pulp build --to dist/index.purs.js --skip-entry-point --optimise -m Installer && shx echo \"module.exports = PS;\" >> dist/index.purs.js",
    "prebuild": "shx rm -rf dist",
    "deps": "bower install",
    "clean": "git stash && git clean -fdX",
    "prerelease": "npm run -s clean && npm install && npm run -s deps && npm test",
    "release": "npm version",
    "postrelease": "git push --tags && npm publish",
    "postinstall": "node -e \"require('./lib/installer').install()\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felixschl/purescript-node.git"
  },
  "author": "Felix Schlitter <felixschlitter@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/felixschl/purescript-node/issues"
  },
  "homepage": "https://github.com/felixschl/purescript-node#readme",
  "dependencies": {
    "gunzip-maybe": "^1.4.0",
    "tar-fs": "^1.15.2",
    "tar-stream": "^1.5.2"
  },
  "devDependencies": {
    "shx": "^0.2.2"
  }
}
